                                        "example": "in_progress"
                                    },
                                    "user_id": {
                                        "description": "Re-asignar tarea a otro usuario (ID debe ser UUID)",
                                        "type": "string",
                                        "format": "uuid",
                                        "nullable": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Tarea actualizada",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Task"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "No autenticado"
                    },
                    "403": {
                        "description": "No autorizado"
                    },
                    "404": {
                        "description": "Tarea no encontrada"
                    },
                    "422": {
                        "description": "Datos de validación inválidos"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "delete": {
                "tags": [
                    "Tasks"
                ],
                "summary": "Eliminar una tarea",
                "description": "Elimina una tarea específica.",
                "operationId": "65e729d6b5cc6a87503df9564613d350",
                "parameters": [
                    {
                        "name": "task",
