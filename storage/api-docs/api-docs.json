                "operationId": "109359a94a956e5d2c3f78d6efeac678",
                "parameters": [
                    {
                        "name": "task",
                        "in": "path",
                        "description": "ID de la tarea",
                        "required": true,
                        "schema": {
                            "type": "integer"
